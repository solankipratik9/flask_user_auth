{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Dev Server (backend/.env.local)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "FLASK_APP": "app:create_app",
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "envFile": "${workspaceFolder}/backend/.env.local",
            "stopOnEntry": false
        }
    ]
}
